<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/my_item_left_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#f00" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/my_item_left_image"
        android:id="@+id/my_item_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条目名称"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/my_item_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示信息"
        android:textSize="16dp"
        android:layout_toLeftOf="@+id/my_item_right_image"/>

    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/my_item_right_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#f00"
        android:layout_alignParentRight="true"/>
</RelativeLayout>