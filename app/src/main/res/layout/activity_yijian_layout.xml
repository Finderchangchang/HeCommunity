<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <liuliu.he.community.view.MyItemView
        android:id="@+id/women_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:myitem_leftimage="@mipmap/person_center_yijian"
        app:myitem_lefttext="意见反馈"
        app:myitem_righttext="返回用户中心" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_line"
            android:hint="请您输入您的意见名称"
            android:padding="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_line"
            android:hint="请您输入您宝贵的意见！"
            android:padding="10dp"
            android:lines="7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="#9D1F20"
            android:text="提交意见"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>