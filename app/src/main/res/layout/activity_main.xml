<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        tools:context=".MainActivity">

        <liuliu.custom.control.toolbar.TToolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:center_et_hint="请输入搜索关键字"
            app:left_img="@mipmap/ic_arrow_drop_down_black_24dp"
            app:left_title="竞秀"
            app:right_img="@mipmap/ttoolbar_message" />

        <LinearLayout
            android:id="@+id/main_title_imgs"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/main_toolbar"
            android:background="@mipmap/title_bg"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_styles_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/main_title_imgs"
            android:background="#fff">

            <LinearLayout
                android:id="@+id/main_good_type_ll"
                style="@style/MainHotLLStyle"
                android:background="#add597">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="商品类型"
                    android:textColor="#ffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_my_order_ll"
                style="@style/MainHotLLStyle"
                android:background="#f7b47f">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的订单"
                    android:textColor="#ffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_user_unit_ll"
                style="@style/MainHotLLStyle"
                android:background="#7ecdf4">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="用户中心"
                    android:textColor="#ffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_shoppingcar_ll"
                style="@style/MainHotLLStyle"
                android:background="#F29c9f">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="购物车"
                    android:textColor="#ffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_total_hot_ll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/main_styles_ll"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#eeddcc"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#eeddcc"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="#ffff"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="#ffff"></LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_sales_promotion_ll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/main_total_hot_ll">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#eeddcc"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="#eeddcc"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#eeddcc"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#eeddcc"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_seal_style_ll"
            android:layout_below="@+id/main_sales_promotion_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="特价促销"></Button>
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="精品推荐"></Button>
            <Button android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="最新商品"></Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_seal_detail_ll"
            android:layout_below="@+id/main_seal_style_ll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_good_classify_ll"
            android:layout_below="@+id/main_seal_detail_ll"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品分类"
                    android:textSize="16sp"
                    android:layout_marginLeft="45dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="详情>"
                    android:textSize="16sp"
                    android:paddingRight="20dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eecccc"></LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/main_good_classify_ll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/imageView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店内活动公告"
                    android:textSize="16sp"
                    android:layout_marginLeft="45dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="详情>"
                    android:textSize="16sp"
                    android:paddingRight="20dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eecccc"></LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
