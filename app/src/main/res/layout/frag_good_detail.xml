<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <liuliu.he.community.view.MyItemView
        android:id="@+id/wode_item_libao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:myitem_leftimage="@mipmap/fenlei_normal"
        app:myitem_lefttext="精品大米"
        app:myitem_righttext="返回分类" />

    <liuliu.he.community.model.MyGridView
        android:id="@+id/good_detail_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/total_botton"
        android:layout_marginTop="10dp"
        android:fadingEdge="none"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:scrollbarStyle="outsideOverlay"
        android:stretchMode="columnWidth" />
</LinearLayout>